<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_insured_tree_wkf" model="ir.ui.view">
            <field name="name">clv_insured.tree</field>
            <field name="model">clv_insured</field>
            <field name="inherit_id" ref="clv_insured.view_clv_insured_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="state_date"/>
                    <field name="state"/>
                </field>
            </field>
        </record>

        <record id="view_clv_insured_form_wkf" model="ir.ui.view">
            <field name="name">clv_insured.form</field>
            <field name="model">clv_insured</field>
            <field name="inherit_id" ref="clv_insured.view_clv_insured_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <sheet string="Insured" position="before">
                    <header>
                        <button string="Process" name="button_process" states="new" type="workflow" groups="clv_base.group_insured_manager" class="oe_highlight"/>
                        <button string="Activate" name="button_activate" states="processing,canceled,suspended" type="workflow" groups="clv_base.group_insured_manager" class="oe_highlight"/>
                        <button string="Suspend" name="button_suspend" states="active,canceled" type="workflow" groups="clv_base.group_insured_manager"/>
                        <button string="Cancel" name="button_cancel" states="processing,active,suspended" type="workflow" groups="clv_base.group_insured_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,processing,active,canceled,suspended"/>
                    </header>
                </sheet>
                <field name="date_inclusion" position="before">
                    <field name="state_date"/>
                    <!--field name="state_age"/-->
                </field>
                <field name="date_inclusion" position="after">
                    <field name="date_activation"/>
                    <field name="date_cancelation"/>
                    <!--field name="date_suspension"/-->
                </field>
            </field>
        </record>

        <record id="view_clv_insured_search_wkf" model="ir.ui.view">
            <field name="name">clv_insured.search</field>
            <field name="model">clv_insured</field>
            <field name="inherit_id" ref="clv_insured.view_clv_insured_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="state"/>
                    <field name="date_activation"/>
                    <field name="date_cancelation"/>
                    <!--field name="date_suspension"/-->
                </field>
                <group string="Group By..." position="inside">
                    <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
