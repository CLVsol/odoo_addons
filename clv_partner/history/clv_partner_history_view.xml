<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="view_res_partner_form_history" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="view_res_partner_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Base" position="before">
                    <page string="History" groups="clv_base.group_base_suser" attrs="{'invisible': ['|', ('active_history', '=', False)]}">
                        <field name="history_ids" colspan="4" nolabel="1">
                            <tree string="Partner History">
                                <field name="user_id"/>
                                <field name="date"/>
                                <field name="notes"/>
                            </tree>
                        </field>
                    </page>
                </page>
                <field name="active" position="after">
                    <field name="active_history"/>
                </field>
            </field>
        </record>

        <record id="view_res_partner_history_form" model="ir.ui.view">
            <field name="name">res.partner.history.form</field>
            <field name="model">res.partner.history</field>
            <field name="arch" type="xml">
                <form string="Partner History" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="partner_id" class="oe_edit_only"/>
                            <h2>
                                <field name="partner_id" placeholder="Partner..." readonly="True"/>
                            </h2>
                            <label for="user_id" class="oe_edit_only"/>
                            <h1>
                                <field name="user_id" default_focus="1" placeholder="User..." readonly="True"/>
                            </h1>
                            <label for="date" class="oe_edit_only"/>
                            <h3>
                                <field name="date" placeholder="Date..." readonly="True"/>
                            </h3>
                            <label for="notes" class="oe_edit_only"/>
                            <field name="notes" placeholder="Notes..."/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_res_partner_history_tree" model="ir.ui.view">
            <field name="name">res.partner.history.tree</field>
            <field name="model">res.partner.history</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Partner History">
                        <field name="partner_id"/>
                        <field name="user_id"/>
                        <field name="date"/>
                        <field name="notes"/>
                </tree>
            </field>
        </record>
        
    </data>
</openerp>
