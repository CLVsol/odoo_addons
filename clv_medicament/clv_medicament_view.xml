<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_medicament_tree" model="ir.ui.view">
            <field name="name">clv_medicament.tree</field>
            <field name="model">clv_medicament</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Medicament">
                    <field name="name"/>
                    <!--field name="medicament_name"/-->
                    <field name="code"/>
                    <field name="notes"/>

<!--                     <field name="presentation"/>
                    <field name="therapeutic_class"/>
                    <field name="manufacturer"/>
                    <field name="ean13"/>
                    <field name="state"/>
                    <field name="medicament_category"/>
                    <field name="medicament_tag_ids"/>
                    <field name="medicament_status"/>
 -->                </tree>
            </field>
        </record>
        
        <record id="view_clv_medicament_form" model="ir.ui.view">
            <field name="name">clv_medicament.form</field>
            <field name="model">clv_medicament</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Medicaments" version="7.0">
                    <sheet string="Medicament">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <!--label for="product_id" class="oe_edit_only"/-->
                            <label for="product_id"/>
                            <h1>
                                <field name="product_id" default_focus="1" placeholder="Product Name..."/>
                            </h1>
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <!--label for="medicament_name" class="oe_edit_only"/-->
                            <label for="medicament_name"/>
                            <h2>
                                <field name="medicament_name" placeholder="Name..."/>
                            </h2>
                            <!--label for="code" class="oe_edit_only"/-->
                            <label for="code"/>
                            <h3>
                                <field name="code" placeholder="Medicament Code..."/>
                            </h3>
                            <!--label for="ean13" class="oe_edit_only"/-->
                            <label for="ean13"/>
                            <h3>
                                <field name="ean13" placeholder="EAN13 Code..."/>
                            </h3>
                            <!--label for="concentration" class="oe_edit_only"/-->
                            <label for="concentration"/>
                            <h3>
                                <field name="concentration" placeholder="Concentration..."/>
                            </h3>
                            <!--label for="pres_quantity" class="oe_edit_only"/-->
                            <label for="pres_quantity"/>
                            <h3>
                                <field name="pres_quantity" placeholder="Presentation Quantity..."/>
                            </h3>
                            <!--label for="pres_form" class="oe_edit_only"/-->
                            <label for="pres_form"/>
                            <h3>
                                <field name="pres_form" placeholder="Presentation Form..."/>
                            </h3>
                            <!--label for="presentation" class="oe_edit_only"/-->
                            <label for="presentation"/>
                            <h3>
                                <field name="presentation" placeholder="Presentation..."/>
                            </h3>
                            <!--label for="therapeutic_class" class="oe_edit_only"/-->
<!--                             <label for="therapeutic_class"/>
                            <h3>
                                <field name="therapeutic_class" placeholder="Therapeutic Class..."/>
                            </h3>
 -->                            <!--label for="manufacturer" class="oe_edit_only"/-->
<!--                             <label for="manufacturer"/>
                            <h3>
                                <field name="manufacturer" placeholder="Manufacturer..."/>
                            </h3>
 -->                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Medicament Information">
                                <group>
<!--                                     <group string="Contact Information">
                                        <field name="address_id" on_change="onchange_address_id(address_id)" context="{'show_address': 1}" options='{"always_reload": True, "highlight_first_line": True}'/>
                                        <field name="medicament_email" widget="email"/>
                                        <field name="medicament_phone"/>
                                        <field name="mobile_phone"/>
                                    </group>
 -->                                    <group string="Status">
                                        <field name="date_inclusion"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Settings" groups="clv_base.group_base_rmanager">
                                <group>
                                    <field name="active"/>
                                    <field name="is_medicament"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_medicament_search" model="ir.ui.view">
            <field name="name">clv_medicament.search</field>
            <field name="model">clv_medicament</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Medicament">
                    <field name="name"/>
                    <field name="medicament_name"/>
                    <field name="code"/>
                    <field name="notes"/>

<!--                     <field name="therapeutic_class"/>
                    <field name="manufacturer"/>
                    <field name="ean13"/>
                    <field name="medicament_category"/>
                    <field name="medicament_tag_ids"/>
 -->                    <separator/>
                    <group expand="0" string="Group By...">
                        <!--filter string="Stage" domain="[]" context="{'group_by': 'state'}"/-->

<!--                         <filter string="Active Component" domain="[]" context="{'group_by':'active_component'}"/>
                        <filter string="Medicament Category" domain="[]" context="{'group_by':'medicament_category'}"/>
                        <filter string="Therapeutic Class" domain="[]" context="{'group_by':'therapeutic_class'}"/>
                        <filter string="Medicament Manufacturer" domain="[]" context="{'group_by':'manufacturer'}"/>
 -->                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_clv_medicament_view">
            <field name="name">Medicaments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_medicament</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_medicament_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new medicament.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_medicament_view_form">
            <field name="act_window_id" ref="act_open_clv_medicament_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_medicament_form"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_medicament_view_tree">
            <field name="act_window_id" ref="act_open_clv_medicament_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_medicament_tree"/>
        </record>
        
    </data>
</openerp>
