<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="workflow_clv_medicament" model="workflow">
            <field name="name">clv_medicament.wkf</field>
            <field name="osv">clv_medicament</field>
            <field name="on_create" eval='True' />
        </record>

         <record id="act_new" model="workflow.activity">
            <field name="wkf_id" ref="workflow_clv_medicament" />
            <field name="flow_start" eval='True' />
            <field name="name">medicament_new</field>
            <field name="kind">function</field>
            <field name="action">clv_medicament_new()</field>
        </record>

        <record id="act_revised" model="workflow.activity">
            <field name="wkf_id" ref="workflow_clv_medicament" />
            <field name="name">medicament_revised</field>
            <field name="kind">function</field>
            <field name="action">clv_medicament_revised()</field>
        </record>

        <record id="act_waiting" model="workflow.activity">
            <field name="wkf_id" ref="workflow_clv_medicament" />
            <field name="name">medicament_waiting</field>
            <field name="kind">function</field>
            <field name="action">clv_medicament_waiting()</field>
        </record>

        <record id="act_okay" model="workflow.activity">
            <field name="wkf_id" ref="workflow_clv_medicament" />
            <field name="name">medicament_okay</field>
            <field name="kind">function</field>
            <field name="action">clv_medicament_okay()</field>
        </record>

        <record id="t1" model="workflow.transition">
            <field name="act_from" ref="act_new" />
            <field name="act_to" ref="act_revised" />
            <field name="signal">clv_medicament_revised</field>
        </record>

        <record id="t2" model="workflow.transition">
            <field name="act_from" ref="act_new" />
            <field name="act_to" ref="act_waiting" />
            <field name="signal">clv_medicament_waiting</field>
        </record>

        <record id="t3" model="workflow.transition">
            <field name="act_from" ref="act_new" />
            <field name="act_to" ref="act_okay" />
            <field name="signal">clv_medicament_okay</field>
        </record>

        <record id="t4" model="workflow.transition">
            <field name="act_from" ref="act_revised" />
            <field name="act_to" ref="act_waiting" />
            <field name="signal">clv_medicament_waiting</field>
        </record>

        <record id="t5" model="workflow.transition">
            <field name="act_from" ref="act_revised" />
            <field name="act_to" ref="act_okay" />
            <field name="signal">clv_medicament_okay</field>
        </record>

        <record id="t6" model="workflow.transition">
            <field name="act_from" ref="act_waiting" />
            <field name="act_to" ref="act_revised" />
            <field name="signal">clv_medicament_revised</field>
        </record>

        <record id="t7" model="workflow.transition">
            <field name="act_from" ref="act_waiting" />
            <field name="act_to" ref="act_okay" />
            <field name="signal">clv_medicament_okay</field>
        </record>

        <record id="t8" model="workflow.transition">
            <field name="act_from" ref="act_okay" />
            <field name="act_to" ref="act_revised" />
            <field name="signal">clv_medicament_revised</field>
        </record>

    </data>
</openerp>
