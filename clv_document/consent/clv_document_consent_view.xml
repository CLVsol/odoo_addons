<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_document_consent_form" model="ir.ui.view">
            <field name="name">Document Consent</field>
            <field name="model">clv_document.consent</field>
            <field name="arch" type="xml">
                <form string="Document Consents" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Document Consent..."/>
                            </h1>
                            <label for="alias" class="oe_edit_only"/>
                            <h2>
                                <field name="alias" placeholder="Alias..."/>
                            </h2>
                            <label for="code" class="oe_edit_only"/>
                            <h2>
                                <field name="code" placeholder="Consent Code..."/>
                            </h2>
                            <label for="description" class="oe_edit_only"/>
                            <h3>
                                <field name="description" placeholder="Description..."/>
                            </h3>
                        </div>
                        <notebook>
                            <page string="Information">
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Settings" groups="clv_base.group_base_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_document_consent_tree" model="ir.ui.view">
            <field name="name">clv_document.consent.tree</field>
            <field name="model">clv_document.consent</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Document Consents">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="view_clv_document_consent_search" model="ir.ui.view">
            <field name="name">clv_document.consent.search</field>
            <field name="model">clv_document.consent</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Document Consent">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="notes"/>
                    <separator/>
                    <filter string="Inactive Consents" name="active" domain="[('active','=',0)]" help="Inactive Consents"/>
                    <group expand="0" string="Group By...">
                        <!--filter string="Parent Consent" domain="[]" context="{'group_by':'parent_id'}"/-->
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_clv_document_consent_view">
            <field name="name">Document Consents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_document.consent</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_document_consent_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new document consent.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_document_consent_view_form">
            <field name="act_window_id" ref="act_open_clv_document_consent_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_document_consent_form"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_document_consent_view_tree">
            <field name="act_window_id" ref="act_open_clv_document_consent_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_document_consent_tree"/>
        </record>
        
    </data>
</openerp>
