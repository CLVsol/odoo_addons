<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="view_clv_document_tree_tag" model="ir.ui.view">
            <field name="name">clv_document.tree</field>
            <field name="model">clv_document</field>
            <field name="inherit_id" ref="view_clv_document_tree"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="code" position="before">
                    <field name="tag_ids" groups="clv_base.group_tag_user"/>
                </field>
            </field>
        </record>

        <record id="view_clv_document_form_tag" model="ir.ui.view">
            <field name="name">clv_document.form</field>
            <field name="model">clv_document</field>
            <field name="inherit_id" ref="view_clv_document_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <label for="name" position="before">
                    <label for="tag_ids"  groups="clv_base.group_tag_user" class="oe_edit_only"/>
                    <h2>
                        <field name="tag_ids" widget="many2many_tags" placeholder="Tags..." groups="clv_base.group_tag_user"/>
                    </h2>
                </label>
            </field>
        </record>

        <record id="view_clv_document_search_tag" model="ir.ui.view">
            <field name="name">clv_document.search</field>
            <field name="model">clv_document</field>
            <field name="inherit_id" ref="view_clv_document_search"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="tag_ids" groups="clv_base.group_tag_user"/>
                </field>
            </field>
        </record>

        <record id="view_clv_tag_form" model="ir.ui.view">
            <field name="name">clv_tag.form</field>
            <field name="model">clv_tag</field>
            <field name="inherit_id" ref="clv_tag.view_clv_tag_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Tag for" position="inside">
                    <group string="Documents">
                        <field name="document_ids" colspan="4" nolabel="1"/>
                    </group>
                </page>
            </field>
        </record>

    </data>
</openerp>
