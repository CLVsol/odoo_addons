<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_person_mng_tree_patient" model="ir.ui.view">
            <field name="name">clv_person_mng.tree</field>
            <field name="model">clv_person_mng</field>
            <field name="inherit_id" ref="view_clv_person_mng_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="patient_code"/>
                </field>
            </field>
        </record>
        
        <record id="view_clv_person_mng_form_patient" model="ir.ui.view">
            <field name="name">clv_person_mng.form</field>
            <field name="model">clv_person_mng</field>
            <field name="inherit_id" ref="view_clv_person_mng_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Patient">
                        <group>
                            <group>
                                <field name="associate_patient"/>
                                <field name="patient_code" placeholder="Patient Code..."/>
                            </group>
                            <group>
                                <field name="patient_id" placeholder="Patient..."/>
                            </group>
                            <group string="Status">
                                <field name="patient_state"/>
                                <field name="patient_uid_inclusion"/>
                                <field name="patient_date_inclusion"/>
                                <field name="patient_date_activation"/>
                                <field name="patient_date_inactivation"/>
                                <field name="patient_date_suspension"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>
        
        <record id="view_clv_person_mng_search_patient" model="ir.ui.view">
            <field name="name">clv_person_mng.search</field>
            <field name="model">clv_person_mng</field>
            <field name="inherit_id" ref="view_clv_person_mng_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="alias" position="after">
                    <field name="patient_code"/>
                </field>
            </field>
        </record>
        
    </data>
</openerp>
