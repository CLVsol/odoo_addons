<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_person_mng_tree_family_category" model="ir.ui.view">
            <field name="name">clv_person_mng.tree</field>
            <field name="model">clv_person_mng</field>
            <field name="inherit_id" ref="view_clv_person_mng_tree_family"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="family_code" position="before">
                    <field name="family_category_ids"/>
                </field>
            </field>
        </record>

        <record id="view_clv_person_mng_form_family_category" model="ir.ui.view">
            <field name="name">clv_person_mng.form</field>
            <field name="model">clv_person_mng</field>
            <field name="inherit_id" ref="view_clv_person_mng_form_family"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="family_code" position="before">
                    <field name="family_category_ids" widget="many2many_tags" placeholder="Family Categories..."/>
                </field>
            </field>
        </record>

        <record id="view_clv_person_mng_search_family_category" model="ir.ui.view">
            <field name="name">clv_person_mng.search</field>
            <field name="model">clv_person_mng</field>
            <field name="inherit_id" ref="view_clv_person_mng_search_family"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="family_code" position="after">
                    <field name="family_category_ids"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
