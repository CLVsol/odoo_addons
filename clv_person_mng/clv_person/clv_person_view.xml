<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_person_mng_tree_person" model="ir.ui.view">
            <field name="name">clv_person_mng.tree</field>
            <field name="model">clv_person_mng</field>
            <field name="inherit_id" ref="view_clv_person_mng_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="person_code"/>
                    <field name="notes"/>
                </field>
            </field>
        </record>
        
        <record id="view_clv_person_mng_form_person" model="ir.ui.view">
            <field name="name">clv_person_mng.form</field>
            <field name="model">clv_person_mng</field>
            <field name="inherit_id" ref="view_clv_person_mng_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Person">
                        <group>
                            <group>
                                <field name="person_code" placeholder="Person Code..."/>
                            </group>
                            <group>
                                <field name="person_id" placeholder="Person..."/>
                            </group>
                            <group string="Contact Information">
                                <field name="address_id" on_change="onchange_address_id(address_id)" context="{'show_address': 1}" options='{"always_reload": True, "highlight_first_line": True}'/>
                                <field name="person_email_2" widget="email"/>
                                <field name="person_phone_2"/>
                                <field name="mobile_phone_2"/>
                            </group>
                            <group string="Status">
                                <field name="person_state"/>
                                <field name="person_date_inclusion"/>
                                <field name="person_date_activation"/>
                                <field name="person_date_inactivation"/>
                                <field name="person_date_suspension"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>
        
        <record id="view_clv_person_mng_search_person" model="ir.ui.view">
            <field name="name">clv_person_mng.search</field>
            <field name="model">clv_person_mng</field>
            <field name="inherit_id" ref="view_clv_person_mng_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="alias" position="after">
                    <field name="person_code"/>
                    <field name="notes"/>
                </field>
            </field>
        </record>
        
    </data>
</openerp>
