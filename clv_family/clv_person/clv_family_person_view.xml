<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_family_person_tree" model="ir.ui.view">
            <field name="name">clv_family.person.tree</field>
            <field name="model">clv_family.person</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Family Persons">
                    <field name="family_id"/>
                    <field name="person_id"/>
                    <field name="role"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="view_clv_family_person_form" model="ir.ui.view">
            <field name="name">clv_family.person.form</field>
            <field name="model">clv_family.person</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Family Persons" version="7.0">
                    <sheet>
                        <group>
                            <field name="family_id"/>
                            <field name="person_id"/>
                            <field name="role" default_focus="1"/>
                        </group>
                        <label for="notes" class="oe_edit_only"/>
                        <field name="notes" placeholder="Notes..."/>
                        <notebook>
                            <page string="Settings" groups="clv_base.group_base_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_family_person_search" model="ir.ui.view">
            <field name="name">clv_family.person.search</field>
            <field name="model">clv_family.person</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Family Persons">
                    <field name="family_id"/>
                    <field name="person_id"/>
                    <field name="role"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Family" domain="[]" context="{'group_by':'family_id'}"/>
                        <filter string="Person" domain="[]" context="{'group_by':'person_id'}"/>
                        <filter string="Member Role" domain="[]" context="{'group_by':'role'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_clv_family_person_view">
            <field name="name">Family Persons</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_family.person</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_family_person_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new family person.
              </p><p>
                With just a quick glance on the family person screen, you
                can easily find all the information you need for each family person.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_family_person_view_form">
            <field name="act_window_id" ref="act_open_clv_family_person_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_family_person_form"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_family_person_view_tree">
            <field name="act_window_id" ref="act_open_clv_family_person_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_family_person_tree"/>
        </record>
        
        <record id="view_clv_family_form_person" model="ir.ui.view">
            <field name="name">clv_family.form</field>
            <field name="model">clv_family</field>
            <field name="inherit_id" ref="view_clv_family_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Persons">
                        <field name="person_ids" colspan="4" nolabel="1"/>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_clv_person_form_family_person" model="ir.ui.view">
            <field name="name">clv_person.form</field>
            <field name="model">clv_person</field>
            <field name="inherit_id" ref="clv_person.view_clv_person_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Family Roles">
                        <field name="family_ids" colspan="4" nolabel="1"/>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
