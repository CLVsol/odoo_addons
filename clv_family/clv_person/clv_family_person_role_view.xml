<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_family_person_role_form" model="ir.ui.view">
            <field name="name">clv_family.person_role.form</field>
            <field name="model">clv_family.person_role</field>
            <field name="arch" type="xml">
                <form string="Family Person Roles" version="7.0">
                    <sheet>
                         <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Person Role..." />
                            </h1>
                            <label for="description" class="oe_edit_only"/>
                            <h3>
                                <field name="description" placeholder="Description..." />
                            </h3>
                            <label for="notes" class="oe_edit_only"/>
                            <field name="notes" placeholder="Notes..."/>
                        </div>
                        <notebook>
                            <page string="Settings" groups="clv_base.group_base_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_family_person_role_tree" model="ir.ui.view">
            <field name="name">clv_family.person_role.tree</field>
            <field name="model">clv_family.person_role</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Family Person Roles">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>
        
        <record id="view_clv_family_person_role_search" model="ir.ui.view">
            <field name="name">clv_family.person_role.search</field>
            <field name="model">clv_family.person_role</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Family Person Role">
                    <field name="name" />
                    <field name="description" />
                    <separator/>
                    <filter string="Inactive Person Roles" name="active" domain="[('active','=',0)]" help="Inactive Person Roles"/>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_clv_family_person_role_view">
            <field name="name">Family Person Roles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_family.person_role</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_family_person_role_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new family person_role.
              </p><p>
                With just a quick glance on the family person_role screen, you
                can easily find all the information you need for each family person_role.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_family_person_role_view_form">
            <field name="act_window_id" ref="act_open_clv_family_person_role_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_family_person_role_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_family_person_role_view_tree">
            <field name="act_window_id" ref="act_open_clv_family_person_role_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_family_person_role_tree" />
        </record>
        
    </data>
</openerp>
