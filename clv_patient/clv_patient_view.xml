<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_patient_tree" model="ir.ui.view">
            <field name="name">clv_patient.tree</field>
            <field name="model">clv_patient</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Patient">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="patient_code"/>
                    <field name="birthday"/>
                </tree>
            </field>
        </record>
        
        <record id="view_clv_patient_form" model="ir.ui.view">
            <field name="name">clv_patient.form</field>
            <field name="model">clv_patient</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Patients" version="7.0">
                    <sheet string="Patient">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <!--label for="name" class="oe_edit_only"/-->
                            <label for="person"/>
                            <h1>
                                <field name="person" default_focus="1" placeholder="Name..."/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <label for="alias"/>
                            <h2>
                                <field name="alias" default_focus="1" placeholder="Alias..." readonly="True"/>
                            </h2>
                            <label for="patient_code"/>
                            <h3>
                                <field name="patient_code" placeholder="Patient Code..."/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Public Information">
                                <group>
                                    <group string="Contact Information">
                                        <field name="address_id" context="{'show_address': 1}" options='{"always_reload": True, "highlight_first_line": True}' readonly='True'/>
                                        <field name="person_email" widget="email" readonly='True'/>
                                        <field name="person_phone" readonly='True'/>
                                        <field name="mobile_phone" readonly='True'/>
                                    </group>
                                    <group string="Status">
                                        <field name="patient_date_inclusion"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Other Information ..." colspan="4" readonly='True'/>
                            </page>
                            <page string="Personal Information" groups="clv_base.group_base_suser">
                                <group>
                                    <group string="Citizenship &amp; Other Info">
                                        <field name="country_id" options='{"no_open": True}' readonly="True"/>
                                        <field name="identification_id" readonly="True"/>
                                        <field name="otherid" readonly="True"/>
                                    </group>
                                    <group string="Family">
                                        <field name="spouse_id" readonly="True"/>
                                        <field name="father_id" readonly="True"/>
                                        <field name="mother_id" readonly="True"/>
                                        <field name="responsible_id" readonly="True"/>
                                    </group>
                                    <group string="Status">
                                        <field name="gender" readonly="True"/>
                                        <field name="marital" readonly="True"/>
                                    </group>
                                    <group string="Birth">
                                        <field name="birthday" readonly="True"/>
                                        <field name="age" readonly="True"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Settings" groups="clv_base.group_base_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_patient_search" model="ir.ui.view">
            <field name="name">clv_patient.search</field>
            <field name="model">clv_patient</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Patient">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="patient_code"/>
                    <field name="address_id"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Address" domain="[]" context="{'group_by': 'address_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_clv_patient_view">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_patient</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_patient_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new patient.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_patient_view_form">
            <field name="act_window_id" ref="act_open_clv_patient_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_patient_form"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_patient_view_tree">
            <field name="act_window_id" ref="act_open_clv_patient_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_patient_tree"/>
        </record>
        
    </data>
</openerp>
