<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="view_clv_medicament_template_tree_dispensation" model="ir.ui.view">
            <field name="name">clv_medicament.template.tree</field>
            <field name="model">clv_medicament.template</field>
            <field name="inherit_id" ref="clv_medicament.view_clv_medicament_template_tree"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="dispensation_id"/>
                </field>
            </field>
        </record>

        <record id="view_clv_medicament_template_form_dispensation" model="ir.ui.view">
            <field name="name">clv_medicament.template.form</field>
            <field name="model">clv_medicament.template</field>
            <field name="inherit_id" ref="clv_medicament.view_clv_medicament_template_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="dispensation_id"/>
                </field>
            </field>
        </record>

        <record id="view_clv_medicament_template_search_dispensation" model="ir.ui.view">
            <field name="name">clv_medicament.template.search</field>
            <field name="model">clv_medicament.template</field>
            <field name="inherit_id" ref="clv_medicament.view_clv_medicament_template_search"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Medicament Template" position="inside">
                    <field name="dispensation_id" />
                </search>
                <group string="Group By..." position="inside">
                    <filter string="Dispensation ID" domain="[]" context="{'group_by':'dispensation_id'}" />
                </group>
            </field>
        </record>

        <record id="view_clv_medicament_dispensation_form_template" model="ir.ui.view">
            <field name="name">clv_medicament.dispensation.form</field>
            <field name="model">clv_medicament.dispensation</field>
            <field name="inherit_id" ref="clv_medicament_dispensation.view_clv_medicament_dispensation_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Medicaments">
                        <field name="dispensation_lines" colspan="4"/>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
