<?xml version="1.0" ?>
<openerp>
    <data>
    
        <!--
            Browse Response Wizard (Survey Browse answer) 
         -->
         
        <record id="view_clv_survey_answer" model="ir.ui.view">
            <field name="name">Survey</field>
            <field name="model">clv_survey.browse.answer</field>
            <field name="arch" type="xml">
                <form string="Survey" version="7.0">
                    <header>
                        <button name="action_next" string="Start" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </header>
                    <group col="4">
                        <field name="clv_survey_id"/>
                        <field name="response_id" domain="[('clv_survey_id','=', clv_survey_id)]"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_browse_clv_survey_response"
            model="ir.actions.act_window">
            <field name="name">Answer Survey</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_survey.browse.answer</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
