<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Survey Response -->
        
        <record model="ir.ui.view" id="clv_survey_response_form_2">
            <field name="name">oehealth_clv_survey_response_form</field>
            <field name="model">clv_survey.response</field>
            <field name="inherit_id" ref="clv_survey_response_form"/>
            <field name="arch" type="xml">
                <field name="user_id" position="replace">
                     <field name="family_id"/>
                     <field name="patient_id"/>
                     <field name="user_id"/>
                </field>
                <field name="question_ids" position="replace">
                    <field name="question_ids" nolabel="1" colspan="4" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="clv_survey_response_tree_2">
            <field name="name">oehealth_clv_survey_response_tree</field>
            <field name="model">clv_survey.response</field>
            <field name="inherit_id" ref="clv_survey_response_tree"/>
            <field name="arch" type="xml">
                <field name="user_id" position="replace">
                     <field name="family_id"/>
                     <field name="patient_id"/>
                     <field name="user_id"/>
                </field>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_clv_survey_response_tree">
            <field name="name">Survey Responses</field>
            <field name="res_model">clv_survey.response</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!--field name="domain">[('user_id','=',uid)]</field-->
            <field name="view_id" ref="clv_survey_response_tree"></field>
            <!--field name="search_view_id" ref="clv_survey_request_search"/-->
        </record>

    </data>
</openerp>
