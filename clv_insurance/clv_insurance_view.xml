<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_insurance_tree" model="ir.ui.view">
            <field name="name">clv_insurance.tree</field>
            <field name="model">clv_insurance</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Insurance">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="insurance_client_id"/>
                    <field name="notes" colspan="4"/>
                </tree>
            </field>
        </record>
        
        <record id="view_clv_insurance_form" model="ir.ui.view">
            <field name="name">clv_insurance.form</field>
            <field name="model">clv_insurance</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Insurances" version="7.0">
                    <sheet string="Insurance">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name..."/>
                            </h1>
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <label for="alias" class="oe_edit_only"/>
                            <h2>
                                <field name="alias" placeholder="Alias..."/>
                            </h2>
                            <label for="code" class="oe_edit_only"/>
                            <h2>
                                <field name="code" placeholder="Insurance Code..."/>
                            </h2>
                            <label for="insurance_client_id" class="oe_edit_only"/>
                            <h2>
                                <field name="insurance_client_id" placeholder="Insurance Client..."/>
                            </h2>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Information">
                                <group>
                                    <group>
                                        <field name="date_inclusion"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Settings" groups="clv_base.group_base_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_insurance_search" model="ir.ui.view">
            <field name="name">clv_insurance.search</field>
            <field name="model">clv_insurance</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Insurance">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="insurance_client_id"/>
                    <field name="notes"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Insurance Client" domain="[]" context="{'group_by':'insurance_client_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_clv_insurance_view">
            <field name="name">Insurances</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_insurance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_insurance_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new insurance.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_insurance_view_form">
            <field name="act_window_id" ref="act_open_clv_insurance_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_insurance_form"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_insurance_view_tree">
            <field name="act_window_id" ref="act_open_clv_insurance_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_insurance_tree"/>
        </record>
        
    </data>
</openerp>
