<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_insurance_tree_wkf" model="ir.ui.view">
            <field name="name">clv_insurance.tree</field>
            <field name="model">clv_insurance</field>
            <field name="inherit_id" ref="clv_insurance.view_clv_insurance_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="date"/>
                    <field name="state"/>
                </field>
            </field>
        </record>

        <record id="view_clv_insurance_form_wkf" model="ir.ui.view">
            <field name="name">clv_insurance.form</field>
            <field name="model">clv_insurance</field>
            <field name="inherit_id" ref="clv_insurance.view_clv_insurance_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <sheet string="Insurance" position="before">
                    <header>
                        <button string="Activate" name="button_activate" states="new,inactive,suspended" type="workflow" groups="clv_base.group_insurance_manager" class="oe_highlight"/>
                        <button string="Inactivate" name="button_inactivate" states="new,active,suspended" type="workflow" groups="clv_base.group_insurance_manager"/>
                        <button string="Suspend" name="button_suspend" states="new,active,inactive" type="workflow" groups="clv_base.group_insurance_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,active,inactive,suspended"
                        statusbar_colors='{"new":"blue","active":"green","inactive":"red","suspended":"red"}'/>
                    </header>
                </sheet>
                <field name="date_inclusion" position="after">
                    <field name="date"/>
                </field>
            </field>
        </record>

        <record id="view_clv_insurance_search_wkf" model="ir.ui.view">
            <field name="name">clv_insurance.search</field>
            <field name="model">clv_insurance</field>
            <field name="inherit_id" ref="clv_insurance.view_clv_insurance_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="state"/>
                </field>
                <group string="Group By..." position="inside">
                    <filter string="Stage" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
