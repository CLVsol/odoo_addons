<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="view_clv_medicament_dispensation_ext_tree_pharmacy" model="ir.ui.view">
            <field name="name">clv_medicament_dispensation_ext.tree</field>
            <field name="model">clv_medicament_dispensation_ext</field>
            <field name="inherit_id" ref="clv_medicament_dispensation_ext.view_clv_medicament_dispensation_ext_tree"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="pharmacy_id"/>
                </field>
            </field>
        </record>

        <record id="view_clv_medicament_dispensation_ext_form_pharmacy" model="ir.ui.view">
            <field name="name">clv_medicament_dispensation_ext.form</field>
            <field name="model">clv_medicament_dispensation_ext</field>
            <field name="inherit_id" ref="clv_medicament_dispensation_ext.view_clv_medicament_dispensation_ext_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <label for="medicament_ref" position="before">
                    <!--label for="pharmacy_id" class="oe_edit_only"/-->
                    <label for="pharmacy_id"/>
                    <h3>
                        <field name="pharmacy_id" placeholder="Pharmacy..."/>
                    </h3>
                </label>
            </field>
        </record>

        <record id="view_clv_medicament_dispensation_ext_search_pharmacy" model="ir.ui.view">
            <field name="name">clv_medicament_dispensation_ext.search</field>
            <field name="model">clv_medicament_dispensation_ext</field>
            <field name="inherit_id" ref="clv_medicament_dispensation_ext.view_clv_medicament_dispensation_ext_search"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Dispensation (Ext)" position="inside">
                    <field name="pharmacy_id" />
                </search>
                <group string="Group By..." position="inside">
                    <filter string="Pharmacy" domain="[]" context="{'group_by':'pharmacy_id'}" />
                </group>
            </field>
        </record>

        <record id="view_clv_pharmacy_form_dispensation_ext" model="ir.ui.view">
            <field name="name">clv_pharmacy.form</field>
            <field name="model">clv_pharmacy</field>
            <field name="inherit_id" ref="clv_pharmacy.view_clv_pharmacy_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Dispensations (Ext)">
                        <field name="dispensation_ext_ids" colspan="4"/>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
