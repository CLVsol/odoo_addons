<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_medicament_group_tree_wkf" model="ir.ui.view">
            <field name="name">clv_medicament_group.tree</field>
            <field name="model">clv_medicament_group</field>
            <field name="inherit_id" ref="clv_medicament_group.view_clv_medicament_group_tree"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="state" />
                </field>
            </field>
        </record>

        <record id="view_clv_medicament_group_form_wkf" model="ir.ui.view">
            <field name="name">clv_medicament_group.form</field>
            <field name="model">clv_medicament_group</field>
            <field name="inherit_id" ref="clv_medicament_group.view_clv_medicament_group_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <sheet string="Medicament Group" position="before">
                    <header>
                        <button string="Revised" name="button_revised" states="draft,waiting,done" type="workflow" groups="clv_base.group_medicament_group_manager"/>
                        <button string="Waiting" name="button_waiting" states="draft,revised" type="workflow" groups="clv_base.group_medicament_group_manager"/>
                        <button string="Done" name="button_done" states="draft,revised,waiting" type="workflow" groups="clv_base.group_medicament_group_manager" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,revised,waiting,done"/>
                    </header>
                </sheet>
            </field>
        </record>

        <record id="view_clv_medicament_group_search_wkf" model="ir.ui.view">
            <field name="name">clv_medicament_group.search</field>
            <field name="model">clv_medicament_group</field>
            <field name="inherit_id" ref="clv_medicament_group.view_clv_medicament_group_search"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="state" />
                </field>
                <group string="Group By..." position="inside">
                    <filter string="Status" domain="[]" context="{'group_by':'state'}" />
                </group>
            </field>
        </record>

    </data>
</openerp>
