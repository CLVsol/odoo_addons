<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_insured_card_tree" model="ir.ui.view">
            <field name="name">clv_insured_card.tree</field>
            <field name="model">clv_insured_card</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Insured Card">
                    <field name="name"/>
                    <field name="code" />
                    <field name="notes" colspan="4"/>
                </tree>
            </field>
        </record>
        
        <record id="view_clv_insured_card_form" model="ir.ui.view">
            <field name="name">clv_insured_card.form</field>
            <field name="model">clv_insured_card</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Insured Cards" version="7.0">
                    <sheet string="Insured Card">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <!--label for="name" class="oe_edit_only"/-->
                            <label for="name"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Printed Name..."/>
                            </h1>
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <!--label for="code" class="oe_edit_only"/-->
                            <label for="code"/>
                            <h3>
                                <field name="code" placeholder="Insured Card Code..."/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Public Information">
                                <group>
                                    <group string="Status">
                                        <!--field name="state" readonly="1"/-->
                                        <field name="date_inclusion" />
                                    </group>
                                </group>
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Settings" groups="clv_base.group_base_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_insured_card_search" model="ir.ui.view">
            <field name="name">clv_insured_card.search</field>
            <field name="model">clv_insured_card</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Insured Card">
                    <field name="name" />
                    <field name="code" />
                    <field name="notes" />
                    <newline />
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="act_open_clv_insured_card_view">
            <field name="name">Insured Cards</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_insured_card</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_insured_card_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new insured_card.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_insured_card_view_form">
            <field name="act_window_id" ref="act_open_clv_insured_card_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_insured_card_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_insured_card_view_tree">
            <field name="act_window_id" ref="act_open_clv_insured_card_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_insured_card_tree" />
        </record>
        
    </data>
</openerp>
