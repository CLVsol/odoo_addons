<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_medicament_dispensation_form_patient" model="ir.ui.view">
            <field name="name">clv_medicament.dispensation.form</field>
            <field name="model">clv_medicament.dispensation</field>
            <field name="inherit_id" ref="clv_medicament_dispensation.view_clv_medicament_dispensation_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <label for="dispensation_date" position="before">
                    <label for="patient_id"/>
                    <h2>
                        <field name="patient_id" placeholder="Patient..."/>
                    </h2>
                </label>
            </field>
        </record>

        <record id="view_clv_patient_form_medicament_dispensation" model="ir.ui.view">
            <field name="name">clv_patient.form</field>
            <field name="model">clv_patient</field>
            <field name="inherit_id" ref="clv_patient.view_clv_patient_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Medicament Dispensations">
                        <field name="medicament_dispensation_ids" colspan="4" nolabel="1"/>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
