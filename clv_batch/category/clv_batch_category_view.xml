<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_batch_category_form" model="ir.ui.view">
            <field name="name">Batch Category</field>
            <field name="model">clv_batch.category</field>
            <field name="arch" type="xml">
                <form string="Batch Categories" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="parent_id" class="oe_edit_only"/>
                            <h2>
                                <field name="parent_id" placeholder="Parent Category..."/>
                            </h2>
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Batch Category..."/>
                            </h1>
                            <label for="code" class="oe_edit_only"/>
                            <h2>
                                <field name="code" placeholder="Category Code..."/>
                            </h2>
                            <label for="description" class="oe_edit_only"/>
                            <h3>
                                <field name="description" placeholder="Description..."/>
                            </h3>
                        </div>
                        <notebook>
                            <page string="Information">
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Child Categories">
                                <group>
                                    <field name="child_ids" colspan="4" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Batches">
                                <group>
                                    <field name="batch_ids" colspan="4" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Settings" groups="clv_base.group_base_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_batch_category_tree" model="ir.ui.view">
            <field name="name">clv_batch.category.tree</field>
            <field name="model">clv_batch.category</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Batch Categories">
                    <field name="complete_name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="view_clv_batch_category_search" model="ir.ui.view">
            <field name="name">clv_batch.category.search</field>
            <field name="model">clv_batch.category</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Batch Category">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="notes"/>
                    <separator/>
                    <filter string="Inactive Categories" name="active" domain="[('active','=',0)]" help="Inactive Categories"/>
                    <group expand="0" string="Group By...">
                        <filter string="Parent Category" domain="[]" context="{'group_by':'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_clv_batch_category_view">
            <field name="name">Batch Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_batch.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_batch_category_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new batch category.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_batch_category_view_form">
            <field name="act_window_id" ref="act_open_clv_batch_category_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_batch_category_form"/>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_batch_category_view_tree">
            <field name="act_window_id" ref="act_open_clv_batch_category_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_batch_category_tree"/>
        </record>
        
        <record id="view_clv_batch_tree_category" model="ir.ui.view">
            <field name="name">clv_batch.tree</field>
            <field name="model">clv_batch</field>
            <field name="inherit_id" ref="view_clv_batch_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                     <field name="category_id"/>
                </field>
            </field>
        </record>

        <record id="view_clv_batch_form_category" model="ir.ui.view">
            <field name="name">clv_batch.form</field>
            <field name="model">clv_batch</field>
            <field name="inherit_id" ref="view_clv_batch_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <!--label for="parent_id" position="before"-->
                <label for="name" position="before">
                    <label for="category_id" class="oe_edit_only"/>
                    <h2>
                         <!--field name="category_ids" widget="many2many_tags" placeholder="Categories..."/-->
                         <field name="category_id" placeholder="Category..."/>
                    </h2>
                </label>
            </field>
        </record>

        <record id="view_clv_batch_search_category" model="ir.ui.view">
            <field name="name">clv_batch.search</field>
            <field name="model">clv_batch</field>
            <field name="inherit_id" ref="view_clv_batch_search"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="category_id"/>
                </field>
                <group string="Group By..." position="inside">
                    <filter string="Batch Category" context="{'group_by': 'category_id'}"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
