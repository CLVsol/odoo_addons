<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_batch_placement_place_tree" model="ir.ui.view">
            <field name="name">clv_batch.placement.place.tree</field>
            <field name="model">clv_batch.placement.place</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Batch Placement Places">
                    <field name="batch_placement_id" />
                    <field name="name" />
                    <field name="notes" />
                </tree>
            </field>
        </record>
        
        <record id="view_clv_batch_placement_place_form" model="ir.ui.view">
            <field name="name">clv_batch.placement.place.form</field>
            <field name="model">clv_batch.placement.place</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Batch Placement Places" version="7.0">
                    <sheet>
                        <group>
                            <field name="batch_placement_id" />
                            <field name="name" default_focus="1" />
                        </group>
                        <label for="notes" class="oe_edit_only"/>
                        <field name="notes" placeholder="Notes..."/>
                        <notebook>
                            <page string="Settings" clv_batchs="clvbase.clv_batch_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_batch_placement_place_search" model="ir.ui.view">
            <field name="name">clv_batch.placement.place.search</field>
            <field name="model">clv_batch.placement.place</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Batch Placement Places">
                    <field name="batch_placement_id" />
                    <field name="name" />
                    <newline />
                    <group expand="0" string="Batch By...">
                        <filter string="Batch Placement" domain="[]" context="{'clv_batch_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_clv_batch_placement_place_view">
            <field name="name">Batch Placement Places</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_batch.placement.place</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_batch_placement_place_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new batch placement place.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_batch_placement_place_view_form">
            <field name="act_window_id" ref="act_open_clv_batch_placement_place_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_batch_placement_place_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_batch_placement_place_view_tree">
            <field name="act_window_id" ref="act_open_clv_batch_placement_place_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_batch_placement_place_tree" />
        </record>
        
        <record id="view_clv_batch_placement_form_place" model="ir.ui.view">
            <field name="name">clv_batch.placement.form</field>
            <field name="model">clv_batch.placement</field>
            <field name="inherit_id" ref="view_clv_batch_placement_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Placement Places">
                        <field name="place_ids" colspan="4" nolabel="1">
                            <tree string="Batch Placement">
                                <!--field name="batch_placement_id" /-->
                                <field name="name" />
                                <field name="notes" />
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_clv_place_form" model="ir.ui.view">
            <field name="name">clv_place.form</field>
            <field name="model">clv_place</field>
            <field name="inherit_id" ref="clv_place.view_clv_place_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Batch Placements">
                        <field name="batch_placement_place_ids" colspan="4" nolabel="1">
                            <tree string="Batch Placements">
                                <field name="batch_placement_id" />
                                <field name="name" />
                                <field name="notes" />
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>

