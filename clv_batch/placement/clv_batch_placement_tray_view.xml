<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_clv_batch_placement_tray_tree" model="ir.ui.view">
            <field name="name">clv_batch.placement.tray.tree</field>
            <field name="model">clv_batch.placement.tray</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Batch Placement Trays">
                    <field name="batch_placement_id" />
                    <field name="name" />
                    <field name="notes" />
                </tree>
            </field>
        </record>
        
        <record id="view_clv_batch_placement_tray_form" model="ir.ui.view">
            <field name="name">clv_batch.placement.tray.form</field>
            <field name="model">clv_batch.placement.tray</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Batch Placement Trays" version="7.0">
                    <sheet>
                        <group>
                            <field name="batch_placement_id" />
                            <field name="name" default_focus="1" />
                        </group>
                        <label for="notes" class="oe_edit_only"/>
                        <field name="notes" placeholder="Notes..."/>
                        <notebook>
                            <page string="Settings" groups="clvbase.group_clvbase_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_clv_batch_placement_tray_search" model="ir.ui.view">
            <field name="name">clv_batch.placement.tray.search</field>
            <field name="model">clv_batch.placement.tray</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Batch Placement Trays">
                    <field name="batch_placement_id" />
                    <field name="name" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Batch Placement" domain="[]" context="{'group_by':'name'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_clv_batch_placement_tray_view">
            <field name="name">Batch Placement Trays</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">clv_batch.placement.tray</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_clv_batch_placement_tray_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new batch placement tray.
              </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_batch_placement_tray_view_form">
            <field name="act_window_id" ref="act_open_clv_batch_placement_tray_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_clv_batch_placement_tray_form" />
        </record>
        
        <record model="ir.actions.act_window.view" id="act_open_clv_batch_placement_tray_view_tree">
            <field name="act_window_id" ref="act_open_clv_batch_placement_tray_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_clv_batch_placement_tray_tree" />
        </record>
        
        <record id="view_clv_batch_placement_form_clv_tray" model="ir.ui.view">
            <field name="name">clv_batch.placement.form</field>
            <field name="model">clv_batch.placement</field>
            <field name="inherit_id" ref="view_clv_batch_placement_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Placement Trays">
                        <field name="tray_ids" colspan="4" nolabel="1">
                            <tree string="Batch Placement">
                                <!--field name="batch_placement_id" /-->
                                <field name="name" />
                                <field name="notes" />
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_clv_tray_form" model="ir.ui.view">
            <field name="name">clv_tray.form</field>
            <field name="model">clv_tray</field>
            <field name="inherit_id" ref="clv_tray.view_clv_tray_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Settings" position="before">
                    <page string="Batch Placements">
                        <field name="clv_batch_placement_tray_ids" colspan="4" nolabel="1">
                            <tree string="Batch Placements">
                                <field name="batch_placement_id" />
                                <field name="name" />
                                <field name="notes" />
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>

